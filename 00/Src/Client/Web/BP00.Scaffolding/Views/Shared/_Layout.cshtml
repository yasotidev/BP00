    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
  
    <div class="container">
        @RenderBody() 
    </div>      
    <hr />
    <div class="container">   
        <footer>
            <p>&copy; @DateTime.Now.Year - Best practice Start project 00</p>
        </footer>
    </div>

